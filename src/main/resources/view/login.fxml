<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Environment.LoginController">

    <VBox>
        <HBox>
            <Label text="World Size" />
            <TextField fx:id="WorldSizeT" text="5" />
        </HBox>
        <HBox>
            <Label text="Trials" />
            <TextField fx:id="TrialsT" text="3" />
        </HBox>
        <HBox>
            <Label text="Time steps" />
            <TextField fx:id="TimeStepsT" text="50" />
        </HBox>
    </VBox>

    <Button text="R" onAction="#runWorldSimulation" />

</HBox>
