<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.Pane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="RL.Controllers.GrapherController"
            prefHeight="700.0" prefWidth="700.0">

    <HBox>
        <Button text="Score Graph" onAction="#scoreGraph">
            <tooltip>
                <Tooltip text="Graph the score progression from start to now" />
            </tooltip>
        </Button>

        <Button text="Species Graph" onAction="#speciesGraph">
            <tooltip>
                <Tooltip text="Graph the number of species progression from start to now" />
            </tooltip>
        </Button>
    </HBox>

    <Pane fx:id="graphPane" layoutX="100" layoutY="100" />

</AnchorPane>
